<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

    <%- include('header', { title: 'Student Dashboard' }) %>
<!-- Change Password Button -->
<button class="bg-yellow-500 text-white px-4 py-2 rounded-md mt-4" onclick="changePassword()">Change Password</button>
<a href="/signout" class="text-white-600 text-sm font-semibold hover:text-red-900 border-b-2 py-2 mb-4 float-right">Sign Out</a>
<br> <br>

<!-- Welcome Message -->
<h1 class="text-3xl font-bold mb-2">Welcome, <%= studentName %>!</h1>

<div class="grid grid-cols-2 gap-8">
    <!-- Left side - Enrolled courses -->
    <div class="col">
        <h2 class="text-2xl font-bold mb-4">Enrolled Courses</h2>

        <% if (enrolledCourses.length > 0) { %>
            <ul>
                <% enrolledCourses.forEach(course => { %>
                    <li class="mb-4">
                        <h3 class="text-lg font-semibold"><%= course.courseName %></h3>
                        <p><%= course.courseDescription %></p>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No courses enrolled yet.</p>
        <% } %>
    </div>

    <!-- Right side - Available courses -->
    <div class="col">
        <h2 class="text-2xl font-bold mb-4">Available Courses</h2>

        <% if (availableCourses.length > 0) { %>
            <ul>
                <% availableCourses.forEach(course => { %>
                    <li class="mb-4">
                        <h3 class="text-lg font-semibold"><%= course.courseName %></h3>
                        <p><%= course.courseDescription %></p>
                        <button class="bg-blue-500 text-white px-4 py-2 rounded-md mr-2" > <a href="/view-courses/<%= course.id %>">View Course Details</a></button>
                        <button class="bg-green-500 text-white px-4 py-2 rounded-md" > <a href="/enroll"></a>Enroll</button>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No courses available at the moment.</p>
        <% } %>
    </div>
</div>



<%- include('footer') %>



</body>
</html>
