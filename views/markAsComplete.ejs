<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= page.title %></title>
    <meta name="csrf-token" content="<%= csrfToken %>">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-100">

    <div class="container mx-auto p-8">
        <h1 class="text-2xl font-bold mb-4"><%= page.title %></h1>
        <p class="text-gray-600 mb-8"><%= page.content %></p>

       <!-- Mark as Complete Button -->
        <div class="col-start-2 col-span-3">
            <button onclick="updatePage('<%= page.id %>', '<%= page.completed %>', '<%= userId %>', '<%= courseId %>')"
                class="rounded text-white bg-green-600 py-2 px-5 hover:bg-green-900 font-medium mt-5 text-xl">
                <% if (page.completed) { %>Completed<% } else { %>Mark as complete<% } %>
            </button>
        </div>
        <!-- Next Page Button -->
        <button id="nextPageBtn" onclick="goToNextPage()" class="bg-green-500 text-white px-4 py-2 rounded ml-4 focus:outline-none">
            Next Page
        </button>
    </div>
    <script>
        var pageToken = document.querySelector('meta[name="csrf-token"]').getAttribute("content");
        function updatePage(pageId, completed, userId, courseId) {
            const newCompleted = !completed;
            const courseId = request.params.courseId
            fetch(`/updatePageStatus/${pageId}`, {
                method: "put",
                headers: {"Content-Type": "application/json"},
                body: JSON.stringify({
                    userId,
                    completed: newCompleted,
                    courseId,
                    pageId: pageId,
                    "_csrf": pageToken
                })
            })
            .then((res) => {
                if(res.ok) {
                    window.location.reload();
                }
            })
            .catch((err) => console.error(err));
        }

        function goToNextPage() {
            // Implement logic to navigate to the next page
            // For demonstration purposes, we'll simply show an alert
            alert('Navigating to the next page');
        }
    </script>

</body>
</html>
