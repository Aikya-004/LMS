<%- include('header', { title: 'Chapters' }) %>
<a href="/educator" class="text-white-600 text-sm font-semibold hover:text-blue-900 border-b-2 py-2 mb-4">Back to Chapters</a>
<a href="/signout" class="text-white-600 text-sm font-semibold hover:text-red-900 border-b-2 py-2 mb-4 float-right">Sign Out</a>
<br> <br>

<div class="grid grid-cols-2 gap-8">
    <!-- Left side - Display existing chapters -->

    <div class="col">
        <h2 class="text-2xl font-bold mb-4">Pages for <%= chapter.chapterName %></h2>

        <% if (pages.length > 0) { %>
            <ul>
                <% pages.forEach(page => { %>
                    <li class="mb-4">
                        <h3 class="text-lg font-semibold"><%= page.title %></h3>
                        <p><%= page.content %></p>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No Pages created yet.</p>
        <% } %>
    </div>
</div>
<%- include('footer') %>