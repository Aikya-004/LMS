<%- include('header', { title: 'Chapters' }) %>

<div class="grid grid-cols-2 gap-8">
    <!-- Left side - Display existing chapters -->
    <div class="col">
        <h2 class="text-2xl font-bold mb-4">Pages for <%= chapter.chapterName %></h2>

        <% if (pages.length > 0) { %>
            <ul>
                <% pages.forEach(page => { %>
                    <li class="mb-4">
                        <h3 class="text-lg font-semibold"><%= page.title %></h3>
                        <p><%= page.content %></p>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No Pages created yet.</p>
        <% } %>
    </div>
</div>
<%- include('footer') %>