<%- include('header', { title: 'Create Course' }) %>

<div class="grid grid-cols-1 md:grid-cols-6 gap-4">
    <a href="/educator" class="text-white-600 text-sm font-semibold border-b-2 py-2 mb-4">Back to Dashboard</a>
    <div class="col-start-2 col-span-4 md:col-span-7 bg-sky-600 p-6 rounded-lg shadow-md mx-auto my-16">
        
        <h1 class="text-4xl font-bold text-white mb-8">Create a New Course</h1>
        <form action="/courses" method="POST">
            <div class="mb-4">
                <label for="courseName" class="block text-white text-sm font-semibold mb-2">Course Name</label>
                <input type="text" id="courseName" name="courseName" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" required>
            </div>
            <!-- Add description input field -->
            <div class="mb-4">
                <label for="courseDescription" class="block text-white text-sm font-semibold mb-2">Course Description</label>
                <textarea id="courseDescription" name="courseDescription" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" required></textarea>
            </div>
            <button type="submit" class="bg-white text-sky-600 px-4 py-2 rounded-md hover:bg-sky-700 focus:outline-none focus:ring focus:border-blue-300">Create Course</button>
        </form>
    </div>
</div>

<%- include('footer') %>
